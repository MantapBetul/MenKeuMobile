            </intent-filter>
        </activity>

        <activity android:name=".user.registerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".user.loginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".transaksipiutang.editActivity2" />
        <activity android:name=".transaksipiutang.mainPiutang" />
        <activity android:name=".transaksipiutang.tambahPiutang" />
